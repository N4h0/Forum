@model IEnumerable<Room>

<div class="container">
    <table class='table table-striped table-hover'>
        <tr >
            <th class="bg-dark text-light">Id</th>
            <th class="bg-dark text-light">Name</th>
            <th class ="bg-dark text-light"> </th>
            <th class="bg-dark text-light"> </th>
        </tr>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomId</td>
                <td>
                    <a asp-controller="Room"
                       asp-action="RoomDetails"
                       asp-route-id="@room.RoomId">@room.RoomName</a>
                </td>
                <td>
                    <!--We need the asp-controller to be set as "Room" to make the route be port/Room/XXX, not port/Category/XXX, which is the default -->
                    <a asp-action="UpdateRoom" asp-controller="Room" asp-route-id="@room.RoomId" class="btn btn-success">Update</a>
                    <a asp-action="DeleteRoom" asp-controller="Room" asp-route-id="@room.RoomId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>