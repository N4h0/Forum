@model IEnumerable<Comment>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<link rel="stylesheet" href="~/css/style.css" />


<div class="container">
    <table class='table table-striped'>
        <tr>
            <th class="bg-dark text-light"> Comment</th>
            @if (User.IsInRole("SuperAdmin"))
            {
                <th class="bg-dark text-light"> </th>
            }
        </tr>
        @foreach (var Comment in Model)
        {
            <tr>
                <td>
                    <span>@Comment.CommentDescription <br></span>
                    <small class="text-muted">Posted @Comment.CommentTime by @Comment.UserName.</small>
                </td>
                @if (User.IsInRole("SuperAdmin"))
                {
                    <td>
                        <a asp-action="UpdateComment" asp-controller="Comment" asp-route-id="@Comment.CommentId" class="btn btn-success">Update</a>
                        <a asp-action="DeleteComment" asp-controller="Comment" asp-route-id="@Comment.CommentId" class="btn btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </table>
</div>
