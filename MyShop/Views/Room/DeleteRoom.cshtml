@model Room

<h2>Delete room </h2>

<div>

    <h4>Room</h4>

    <dl class="row">
        <dt class="col-sm-2">Room Id</dt>
        <dd class="col-sm-10">@Model.RoomId </dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.RoomName</dd>

    </dl>


    <form asp-action="DeleteConfirmedRoom" asp-route-id="@Model.RoomId" method="post">
            <button type="submit" class="btn  btn-danger">Delete</button>
        <a asp-controller="Category" asp-action="CategoryDetails" asp-route-id="@Model.CategoryId" class="btn btn-secondary">Cancel</a>
    </form>
     
  </div>

