@model Topic

<h2>Delete Topic </h2>
<div>

    <h4>Topic</h4>
        <dl class="row">
        <dt class="col-sm-2">Topic Id</dt>
        <dd class="col-sm-10">@Model.TopicId</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.TopicName</dd>
    </dl>

    <!--Funtion taht confirm deleting, it gives -->
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this topic?');
        }
    </script>

    <!--When the button is clicked, the HttpGet deleteTopic is called in the current controller (TopicController)-->
<!--  if there's an error  when deleting a Topic, it get's returned to RoomDetails -->


    <form asp-action="DeleteConfirmedTopic" asp-route-id="@Model.TopicId" method="post">
        
        <button type="submit" class="btn btn-danger" onclick="return confirmDelete();"> Delete </button>

        <a asc-controller="Room" asp-action="RoomDetails" asp-route-id="@Model.RoomId" class="btn btn-primary">Cancel</a>
    </form>


</div>
