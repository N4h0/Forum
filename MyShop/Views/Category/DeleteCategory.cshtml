@model Category

<h2>Delete category </h2>

<div>
    <!-- Display the text "Category" -->
    <h4>Category</h4>

    <dl class="row">
        <dt class="col-sm-2">Category Id</dt>

        <!-- Display the actual Category Id -->
        <dd class="col-sm-10">@Model.CategoryId </dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>
        <!-- Display the actual Category Name -->


    </dl>
    <!-- Create a form element with specific action, route, and HTTP method -->
    <form asp-action="DeleteConfirmedCategory" asp-route-id="@Model.CategoryId" method="post">

        <!-- Display a "Delete" button to confirm category deletion with red background -->
        <button type="submit" class="btn  btn-danger">Delete</button>

        <!-- Display a "Cancel" button to return to the category table with a secondary style -->
        <a asp-action="CategoryTable" class="btn btn-secondry">Cancel</a>
    </form>




</div>