@model Category

<h2>Delete category </h2>

<div>

    <h4>Category</h4>

    <dl class="row">
        <dt class="col-sm-2">Category Id</dt>
        <dd class="col-sm-10">@Model.CategoryId </dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

    </dl>

    <form asp-action="DeleteConfirmedCategory" asp-route-id="@Model.CategoryId" method="post">

        <button type="submit" class="btn  btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondry">Cancel</a>
    </form>




</div>