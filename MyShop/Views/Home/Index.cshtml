    <style>

        /*Dette snakker vi om side */
        .col-md-8 {
            border: 1px solid #e0e0e0;
            width: 100%;
        }

        /* Ramme rundt hvert innlegg */
        .list-unstyled li {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 25px;
        }

        /* Overskriftene (h4) */
        ul.list-unstyled li h4 {
            font-size: 18px;
            margin-top: 0;
            margin-bottom: 10px;
        }

        /* Lenker (a) i overskriftene */
        .list-unstyled li h4 a {
            text-decoration: none;
            color: #007bff;
        }

        /* Endre fargen til lenker når de peker (hover-effekt) */
        ul.list-unstyled li h4 a:hover {
            color: #0056b3;
        }

        /* Tidsstempel (p) */
        ul.list-unstyled li p {
            font-size: 14px;
            color: #777;
            margin: 0;
        }
        /*Dette snakker vi om side slutt*/


        /*Kategori start*/
        /* Legg til en blå border rundt kategoriene */
        .col {
