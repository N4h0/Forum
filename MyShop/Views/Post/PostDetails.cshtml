@model Forum.Models.Post
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<H1>@Model.PostTitle</H1>

<!--Links to the corresponding topic, room, category and finally our homepage.-->
<a class="link-primary" asp-controller="Home" asp-action="Index">Home ></a>
<a asp-action="CategoryDetails" asp-controller="Category" asp-route-id="@Model.Topic.Room.CategoryId" class="link-primary">@Model.Topic.Room.Category.CategoryName ></a>
<a asp-action="RoomDetails" asp-controller="Room" asp-route-id="@Model.Topic.RoomId" class="link-primary">@Model.Topic.Room.RoomName ></a>
<a asp-action="TopicDetails" asp-controller="Topic" asp-route-id="@Model.TopicId" class="link-primary">@Model.Topic.TopicName ></a>
<a class="link-primary">@Model.PostTitle</a>




<!-- Render a partial view "_CommentTable" with the "Comments" property of the model as the model -->

<partial name="_CommentTable" model="Model.Comments" />

<!-- Check if the user is in either the "SuperAdmin" or "Member" role -->
@if (User.IsInRole("SuperAdmin")|| User.IsInRole("Member"))
{
    //Creaes a button to create a comment for the posts
    <a class="btn btn-primary"
       asp-controller="Comment"
       asp-action="CreateComment"
       asp-route-postId="@Model.PostId">Reply</a>
}