@model Comment

<h2>Delete Comment </h2>

<div>

    <h4>Comment</h4>

    <dl class="row">
        <dt class="col-sm-2">Comment Id</dt>
        <dd class="col-sm-10">@Model.CommentId </dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.CommentDescription</dd>

    </dl>


    <form asp-action="DeleteConfirmedComment" asp-route-id="@Model.CommentId" method="post">

        <button type="submit" class="btn  btn-danger">Delete</button>
        <a asp-controller="Post" asp-action="PostDetails" asp-route-id="@Model.PostId" class="btn btn-secondary">Cancel</a>
    </form>

</div>

